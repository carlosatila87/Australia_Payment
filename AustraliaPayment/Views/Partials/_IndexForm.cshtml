@model AustraliaPayment.Models.Payment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Australia Payment App";
}
<div class="row">
    <div id="payform" class="col-md-4 col-md-offset-4" autocomplete="off">
        <h2>Bank Payment Details</h2>
        <hr />
        @using (Html.BeginForm())
        {
            <div class="form-group">
                *@Html.LabelFor(model => model.BSB, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.BSB, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your BSB", autocomplete = "off"} })
                @Html.ValidationMessageFor(model => model.BSB, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                *@Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your account number", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                *@Html.LabelFor(model => model.AccountName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your account name", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter the reference", autocomplete = "off" } })
            </div>
            <div class="form-group">
                *@Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("amountAux", null, htmlAttributes: new { @class = "form-control", placeholder = "Enter the amount", autocomplete = "off" })
                @Html.Hidden("Amount",0)
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
            <div>
                <small class="text-info">Fields with * are mandatory.</small>
            </div>
            <button id="btn" type="submit" class="btn btn-primary" style="width:100%;">Submit</button>
        }
    </div>
</div>
@section Scripts {    
    <script>          
        $(document).ready(function () {
            $('#BSB').mask("000-000");
            $('#AccountNumber').mask("000000");
            $('#amountAux').mask("#,##0.00", { reverse: true });            
        });

    </script>
}
